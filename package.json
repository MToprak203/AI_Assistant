{
  "name": "ai-code-assistant-electron",
  "version": "1.0.0",
  "description": "AI Code Assistant Desktop App",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "node scripts/dev.js",
    "dev:electron": "electron . --dev",
    "dev:backend": "python -m entrypoints.web",
    "prepare:build": "node scripts/prepare-build.js",
    "build": "npm run prepare:build && electron-builder",
    "build:win": "npm run prepare:build && electron-builder --win",
    "build:mac": "npm run prepare:build && electron-builder --mac",
    "build:linux": "npm run prepare:build && electron-builder --linux",
    "build:full": "npm run prepare:build && node scripts/build.js"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chokidar": "^3.5.3",
    "electron-store": "^8.1.0",
    "socket.io-client": "^4.6.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.iys.aicodeassistant",
    "productName": "AI Code Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/**/*",
      "python-dist/${os}/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "python-dist",
        "to": "python-dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
